NODE_ENV=development
PORT=4000

# Firebase Admin SDK (Server-only, NEVER expose in frontend)
# Get from Firebase Console → Project Settings → Service Accounts → Generate New Private Key
# Must be a JSON string with escaped newlines
FIREBASE_SERVICE_ACCOUNT="{\"type\":\"service_account\",\"project_id\":\"medivio-3273a\",...}"

# reCAPTCHA Secret Key
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_...

# Paddle Configuration
PADDLE_ENV=sandbox
PADDLE_API_KEY=your_paddle_api_key
PADDLE_WEBHOOK_SECRET=your_paddle_webhook_secret
PADDLE_WEBHOOK_URL=http://localhost:4000/webhooks/paddle

# Frontend URL for CORS
FRONTEND_URL=http://localhost:3000

# Session Management
SESSION_SECRET=your_session_secret_key_here

# CORS Configuration
CORS_ORIGINS=http://localhost:3000

# Optional: Email Configuration
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your-email@example.com
# SMTP_PASSWORD=your-password

# Optional: Database
# DATABASE_URL=postgresql://user:password@localhost:5432/medivio

# Optional: SMS/Twilio
# TWILIO_ACCOUNT_SID=your_account_sid
# TWILIO_AUTH_TOKEN=your_auth_token
# TWILIO_PHONE_NUMBER=+1234567890

# Allowed browser origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Paddle Billing (server)
PADDLE_ENV=sandbox
PADDLE_API_KEY=
PADDLE_WEBHOOK_SECRET=
PADDLE_WEBHOOK_URL=

# Paddle Billing (frontend) - place in root .env.local
NEXT_PUBLIC_PADDLE_ENV=sandbox
NEXT_PUBLIC_PADDLE_PRICE_ID=
NEXT_PUBLIC_PADDLE_CLIENT_TOKEN=
